<div class="box box-danger">
    @using (Html.BeginForm("KullaniciSil", "Kullanici", FormMethod.Post, new { id = "FrmKullaniciSilKarti" }))
    {
        @Html.HiddenFor(x => x.KullaniciID)

    <div class="row">

        <div class="col-md-6" style="margin-top: 1px;">

            <div class="form-group">


                <label>Kullanıcı Adı</label>

                <div class="input-group mb-3">
                    <div class="input-group-prepend">

                        <span class="input-group-text"><i class="fa fa-id-card"></i></span>

                    </div>

                    @Html.TextBoxFor(x => x.KullaniciAdi, new { @class = "form-control", disabled = "disabled" })




                </div>
            </div>
        </div>



        <div class="col-md-6" style="margin-top: 1px;">

            <div class="form-group">


                <label>Ad Soyad</label>

                <div class="input-group mb-3">
                    <div class="input-group-prepend">

                        <span class="input-group-text"><i class="fa fa-question"></i></span>

                    </div>


                    @Html.TextBoxFor(x => x.AdSoyad, new { @class = "form-control", disabled = "disabled" })





                </div>
            </div>
        </div>
        <div class="col-md-12" style="margin-top: 1px;">

            <div class="form-group">


                <label>Çalıştığı Firma</label>

                <div class="input-group mb-3">
                    <div class="input-group-prepend">

                        <span class="input-group-text"><i class="fa fa-question"></i></span>

                    </div>


                    @Html.TextBoxFor(x => x.CalistigiFirma, new { @class="form-control",disabled = "disabled" })





                </div>
            </div>
        </div>

        <br />




    </div>

        <div class="modal-footer">


            <button type="button" onclick="KullaniciSilMain(@Model.KullaniciID)" class="btn btn-danger"><span class="glyphicon glyphicon-trash" style="vertical-align:middle;margin-top: -5px"></span> Sil</button>
            <button type="button" onclick="FormKapat('KullaniciSilModal')" class="btn btn-default" data-dismiss="modal">Vazgeç</button>


        </div>
    }
</div>




