                <div class="form-group" style="width:80%">
                    <label>WLAN IP</label>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">

                            <span class="input-group-text"><i></i>₺</span>

                        </div>
                        @Html.TextBoxFor(x => x.WLANIP, new { @class = "form-control" })



