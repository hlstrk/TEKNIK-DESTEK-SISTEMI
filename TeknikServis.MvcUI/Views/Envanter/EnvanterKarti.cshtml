            <div id="anydesk1" class="col-md-6">
                <div class="form-group" style="width:80%">
                    <label>AnyDesk ID</label>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">

                            <span class="input-group-text"><i></i>₺</span>

                        </div>
                        @Html.TextBoxFor(x => x.AnyDesk, new { @class = "form-control" })



                    </div>
                </div>
            </div>

            <div id="tw1" class="col-md-6">
                <div class="form-group" style="width:80%">
                    <label>TeamViewer ID</label>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">

                            <span class="input-group-text"><i></i>₺</span>

                        </div>
                        @Html.TextBoxFor(x => x.TeamViewer, new { @class = "form-control" })



                    </div>
                </div>
            </div>



            <div id="os1" class="col-md-6">
                <div class="form-group" style="width:80%">
                    <label>İşletim Sistemi</label>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">

                            <span class="input-group-text"><i></i></span>

                        </div>
                        @Html.TextBoxFor(x => x.OS, new { @class = "form-control" })



                    </div>
                </div>
            </div>


            <div id="aw1" class="col-md-6">
                <div class="form-group" style="width:80%">
                    <label>Anti Virüs</label>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">

                            <span class="input-group-text"><i></i></span>

                        </div>
                        @Html.TextBoxFor(x => x.AntiVirüs, new { @class = "form-control" })



                    </div>
                </div>
            </div>




            <div class="col-md-12">
                <div class="form-group">

                    <label>Açıklama</label>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">

                            <span class="input-group-text"><i class="fa fa-comment"></i></span>

                        </div>
                        @Html.TextAreaFor(x => x.Aciklama, new { @class = "form-control", @placeholder = "Envanter'a açıklama ekleyebilirsiniz..." })

                    </div>
                </div>
            </div>





            <div class="modal-footer">
                <div class="col-md-12">
                    @*<button type="submit" onclick="return MusteriKaydet()" class="btn btn-block btn-primary">Kaydet</button>*@
                    <button type="button" onclick="EnvanterKaydetMain()" class="btn btn-block btn-outline-warning">Ekle/Güncelle</button>
                </div>
            </div>







        </div>











    }
</div>

