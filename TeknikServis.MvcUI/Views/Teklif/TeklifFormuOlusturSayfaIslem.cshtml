@model TeknikServis.Entittes.Models.Teklifformu

@{
    Layout = null;

}

<style>
    

   
</style>
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">



    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Content/AdminLTE/plugins/fontawesome-free/css/all.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/Content/AdminLTE/dist/css/adminlte.min.css">
</head>
<body>

    <!-- Main content -->
    <!-- title row -->
    <div class="row">
        <div class="col-12">
            <div class="page-header">
                <img style=" width: 10cm;" src="~/Content/Images/mtx-mavi-logo.png" />
            </div>
            <br />
        </div>
        <!-- /.col -->
    </div>

    <!-- info row -->



    <div class="row">
        <div class="col-sm-6 invoice-col">


            Firma Ünvanı :  <strong style="text-align: left; padding-left: 0.5cm; color: darkblue">@Model.FirmaUnvanı</strong>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;

            $ Kur :  <strong style="padding-left: 0.5cm;">@Model.kur</strong><br>








        </div>

        <!-- /.col -->
        <div class="col-sm-6 ">
            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;  Teklif Tarihi :  <strong style="padding-left: 0.5cm;">@Model.tekliftarihi</strong><br />
            Vergi / Kimlik :  <strong style="padding-left: 0.5cm;">@Model.VergiKimlik</strong>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            Geçerlilik Süresi :  <strong style="padding-left: 0.5cm;">@Model.gecerliliksuresi</strong><br />
            <br />    <br />

        </div>
        <!-- /.col -->
        <div class="col-sm-10 invoice-col">

            İlgili :  <strong style="padding-left: 2cm;">@Model.ilgili</strong><br>
            <br />

        </div>

        <div class="col-sm-10 invoice-col">
            İletişim :      <strong style="padding-left: 1.5cm;">@Model.iletisimadres</strong><br>

        </div>
        <br />
        <div class="col-sm-10 invoice-col">
            Tel & E-Posta :    <strong style="padding-left:0.5cm;">@Model.TelEposta</strong><br>

        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
    <!-- Table row -->
    <br />
    <br />
    <div class="row">
        <div class="col-12 table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Ürün Açıklması</th>
                        <th>Miktar</th>
                        <th>Birim</th>
                        <th>Birim Fiyat</th>
                        <th>KDV Oranı</th>
                        <th>Toplam Fiyat</th>
                    </tr>
                </thead>
                @foreach (var item in Model.Teklifler)
                {
                    <tbody>
                        <tr>
                            <td style="text-align:center">@item.UrunAciklama</td>
                            <td style="text-align:center">@item.Miktar</td>
                            <td style="text-align:center">@item.Birim</td>
                            <td style="text-align:center">@item.BirimFiyat ₺</td>
                            <td style="text-align:center">@item.KdvOrani</td>
                            <td style="text-align:center">@item.GenelToplam ₺</td>

                        </tr>

                    </tbody>
                }
            </table>
            <hr />
            <div class="col-6">
                

                <div style="margin-left:12cm" class="table-responsive" >
                    <table class="table">
                        <tr>
                            <th style="width:50%">Toplam:</th>
                            <td>@Model.toplam</td>
                        </tr>
                        <tr>
                            <th>% KDV:</th>
                            <td>@Model.kdvtoplam</td>
                        </tr>
                        <tr>
                            <th>Genel Toplam:</th>
                            <td>@Model.geneltoplam</td>
                        </tr>

                    </table>
                </div>
            </div>
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->

    <br />
    <br />
    <br />

    <div class="row">
        <!-- accepted payments column -->
        <div class="col-6">
            <p style="color:black" class="lead">Ödeme Şekli:</p>


            <strong>
                * Teklifimizin geçerlilik süresi 5 gündür.<br /><br />
                * Genel Toplam fiyat %18 Kdv dahildir.<br /><br />
                * Kurulum ve eğitim hizmetleri fiyata dahil değildir.<br /><br />
                Ödeme Şekli : Teklifin imzalanması ile peşin nakit veya banka havale eft olarak yapılacaktır <br /><br />
            </strong>


        </div>
        <!-- /.col -->
        <!-- /.col -->
    </div>
    <!-- /.row -->

    <img style="width:23cm" src="~/Content/Images/altpng.png" />

    <!-- /.content -->
    <!-- ./wrapper -->
    <!-- Page specific script -->

</body>
</html>
