@model List<TeknikServis.Entittes.Models.NotView>
@{
    ViewBag.Title = "SSS";
    Layout = null;



}



@if (Model.Count == 0)
{



    <div class="card card-default">
        <div class="card-header">
            <h3 class="card-title">
                <i class="fas fa-bullhorn"></i>
                Duyurular
            </h3>
            @if (Session["Role"].ToString() == "Admin")
            {

                <button type="button" onclick="FormGoster('../Anasayfa/DuyuruEkle/?NotID=0','tumduyurular')" class="btn btn-outline-info float-right"><i class="fas fa-plus-circle"></i></button>


            }
        </div>
        <!-- /.card-header -->


        <div class="card-body">
            <div class="callout callout-danger">
                <h5>Merhaba!</h5>

                <p>
                    MTX-KURUMSAL destek talep sistemi aktif!. Bu sistem üzerinden destek talebi oluşturabilir ve bu taleplerin durumunu aşama aşama takip edebilirsiniz!
                </p>
            </div>
            <div class="callout callout-info">
                <h5>Destek Talebi Oluşturma Hakkında</h5>

                <p>Soldaki menüden S.S.S sayfasına giderek nasıl talep oluşturacağınız hakkında bilgi edinebilirsiniz.</p>
            </div>

        </div>
        <!-- /.card-body -->
    </div>







}

else if (Model.Count != 0)
{


    <div class="card card-default">
        <div class="card-header">
            <h3  style="color:black;font-weight:500;margin:revert"  class="card-title">
                <i  class="fas fa-bullhorn"></i>
                Duyurular
            </h3>
            @if (Session["Role"].ToString() == "Admin")
            {
                <button type="button" onclick="FormGoster('../Anasayfa/DuyuruEkle/?NotID=0','DuyuruModal')" class="btn btn-outline-info float-right"><i class="fas fa-plus-circle"></i></button>
            }

            <button style="margin-right:10px" type="button" onclick="FormGoster('../Anasayfa/DuyuruListesi/','tumduyurular')" class="btn btn-outline-dark float-right"><i class="fas fa-eye"></i></button>
        </div>
        <!-- /.card-header -->


        <div class="card-body">

            @foreach (var item in Model.OrderByDescending(file => file.NotID).ToList())

            {

                var derece = "success";
                if (item.onemderecesi == "dusuk")
                {
                    derece = "success";
                }

                if (item.onemderecesi == "orta")
                {
                    derece = "warning";
                }

                if (item.onemderecesi == "yuksek")
                {
                    derece = "danger";
                }



                <div class="callout callout-@derece">

                    <h5>@item.duyurubasligi</h5>

                    <p>
                        @item.NotIcerigi
                    </p>
                </div>

            }

        </div>
        <!-- /.card-body -->
    </div>

}


























