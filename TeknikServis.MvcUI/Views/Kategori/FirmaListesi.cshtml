@model List<TeknikServis.Entittes.Models.Firma>

@{

    ViewBag.Title = "FirmaListesi";
}

<section class="content">
    <div class="container-fluid">
        <div style="margin-top:3rem"class="row">
            <div class="col-12">


                <div class="card">

                    <!-- /.card-header -->
                    <div class="card-body">
                        @if (Model.Count == 0)
                        {

                            if (Session["Role"].ToString() == "Personel")
                            {
                                <br />
                                <div class="callout callout-info lead">
                                    <h4>Uyarı!</h4>
                                    <p>Go Back To Safety.</p>
                                </div>

                            }
                            else
                            {
                                <br />
                                <div class="callout callout-info lead">
                                    <h4>Henüz hiçbir firma eklemediniz.</h4>

                                </div>

                            }





                            <hr />

                        }

                        else if (Model.Count != 0)
                        {









                            <table id="firmadeptablosu" class="table table-bordered table-striped">

                                <thead>
                                    <tr>
                                        <th style="text-align:center">
                                            Firma Barkod
                                        </th>
                                        <th style="text-align:center">
                                            Müşteri Türü
                                        </th>
                                        <th>
                                            Firma
                                        </th>
                                        <th>
                                            Yetkili Ad Soyad
                                        </th>
                                        <th>
                                            Cep Telefonu
                                        </th>
                                        <th>
                                            Email
                                        </th>

                                        <th style="text-align:center">
                                            Durumu
                                        </th>

                                        <th style="text-align:center">
                                            İşlemler
                                        </th>


                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {

                                    <tr style="cursor:pointer" ondblclick="FormGoster('../Kategori/DepartmanKarti/?FirmaID=@item.FirmaID','DepartmanModal')">
                                        <td style="text-align:center">
                                            <a href="#" onclick="FormGoster('../Firma/FirmaKarti/?FirmaID=@item.FirmaID','FirmaModal')"> @Html.DisplayFor(modelItem => item.BarkodNo)</a>

                                        </td>
                                        <td style="text-align:center">
                                            @Html.DisplayFor(modelItem => item.MusteriTuru)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.FirmaAdi)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.AdSoyad)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CepTelefonu)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Email)
                                        </td>

                                        <td style="text-align: center">

                                            @if (item.Aktif == true)
                                            {
                                                <div style="text-align: center">
                                                    <label style="color: green">Aktif</label>
                                                </div>
                                            }
                                            else
                                            {
                                                <div style="text-align:center">
                                                    <label style="color:grey">Pasif</label>
                                                </div>
                                            }

                                        </td>

                                        <td style="text-align:center">

                                            <label> &ensp; &ensp; </label>

                                            <button class="btn btn-outline-danger btn-rounded btn-sm" onclick="FormGoster('../Kategori/DepartmanKarti/?FirmaID=@item.FirmaID','DepartmanModal')"
                                                    data-toggle="tooltip" data-placement="bottom" title="Bölümleri  Görüntüle">
                                                <span class="fa fa-user-cog"></span>
                                            </button>



                                        </td>

                                    </tr>

                                    }
                                </tbody>


                            </table>
                        }
                        <br />


                        <br />
                        <br />

                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>

    <!-- /.container-fluid -->
</section>



<div id="FirmaDepartmanModal" class="modal">
    <div class="modal-dialog-scrollable modal-lg" style=" margin: 1.75rem auto;">
        <div class="modal-content">



            <div id="EnvanterModalBody" class="modal-body" style="padding:0">

            </div>

        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>



<div id="FirmaModal" class="modal">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Müşteri Ekle Ve Düzenle</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick="FormKapat('FirmaModal')">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>


            <div id="FirmaModalBody" class="modal-body">

            </div>

        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>


<div id="DepartmanModal" class="modal " style="z-index: 5009; margin: 0.75rem auto; ">
    <div style="margin:auto" class="modal-dialog-scrollable  modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Firma Departman, Alt Departman Ve Bölüm Tanımı </h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick="FormKapat('DepartmanModal')">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>


            <div id="DepartmanModalBody" class="modal-body">

            </div>

        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>



