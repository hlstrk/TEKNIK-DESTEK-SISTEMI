@model List<TeknikServis.Entittes.Models.Departmanlar>

@{
    Layout = null;
    ViewBag.Title = "FirmaDepartmanKarti";
}

<div class="modal-header">
    <h5 class="modal-title" style="color:lightslategrey">@Session["EnvanterAktarim"]</h5>  <h5 class="modal-title">  &nbsp;  Envanter</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick="FormKapat('EnvanterModal')">
        <span aria-hidden="true">&times;</span>
        <h5 class="modal-title" style="float:left;margin-right:3rem;color:cornflowerblue">   @Model.FirmaAdi</h5>

    </button>
</div>
<script>
    $('#firmadepkarti').DataTable({
        'paging': true,
        'lengthChange': false,
        'searching': true,
        'ordering': true,
        'info': true,
        'autoWidth': true,
        "pageLength": 12
    })
</script>





<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12" style="margin:auto">






                <!-- /.card-header -->


                @if (Model.Count == 0)
                {


                    <br />
                    <div class="callout callout-success lead">
                        <h4>Uyarı!</h4>
                        <p>Bu Firmanın henüz hiçbir departmanı yok..</p>
                    </div>









                }

                else if (Model.Count != 0)
                {


                    <table data-order='[[ 0, "desc" ]]' id="example4" class="table table-bordered table-striped">

                        <thead>



                            <tr style="text-align: center">
                                <th style="text-align: center">
                                    Duyuru
                                </th>

                                @if (Session["Role"].ToString() == "Admin")
                                {
                                    <th style="text-align: center">
                                        Oluşturan
                                    </th>

                                    <th style="text-align: center">

                                    </th>
                                }





                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.OrderByDescending(file => file.DepartmanID).ToList())

                            {


                                <tr style="text-align: center">



                                    <td>
                                        @Html.DisplayFor(modelItem => item.DepartmanID)
                                    </td>



                                        <td>
                                           


                                                <span class="badge badge-warning">Siz</span>

                                     
                                           

                                        </td>







                                        <td>






                                            <a href="#" onclick="DepartmanSil(@item.DepartmanID); DepartmanListele();">Sil</a>



                                        </td>
                                    






                                </tr>














                            }
                        </tbody>
                    </table>
                }
                <br />


                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
    <!-- /.container-fluid -->
</section>





<!-- /.box-footer -->
