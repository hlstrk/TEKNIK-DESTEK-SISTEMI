

@model List<TeknikServis.Entittes.Models.Departmanlar>

@{
    ViewBag.Title = "DepartmanListesi";
    Layout = null;
}


<!-- /.row -->
<!-- /.row -->

@if (Model.Count == 0)
{




    <div class="callout callout-secondary lead">
        <h4>Uyarı!</h4>
        <p>Bu Firmaya Ait Henüz Hiçbir Departman Yok!.</p>


    </div>


    <br />


   







}

else
{



    <div style=" margin:auto; padding-top:30px">


        <div class="card">

            <!-- /.card-header -->
            <div class="card-body">
                &nbsp;
                &nbsp;
                <a style="margin-bottom:20px;" onclick="FormGoster('../Teknik/TanimKarti/?TanimGrupID=52','TanimEkleModal')" class="btn btn-m btn-success btn-m pull-right">Ekle</a>
                &nbsp;
                <br />



                <table id="example44" class="table table-bordered table-striped">
                    <thead>
                        <tr style="text-align: center">
                            <th style="text-align: center">
                                Barkod No
                            </th>
                            <th style="text-align: center">
                                Departman Adı
                            </th>

                            <th style="text-align: center">
                                Ait Olduğu Firma
                            </th>
                            <th style="text-align: center">
                                Sil
                            </th>







                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model.OrderByDescending(file => file.DepartmanID).ToList())

                        {


                            <tr style="text-align: center;cursor:pointer" ondblclick="FormGoster('../Teknik/TanimKarti/?TanimID=@item.DepartmanID', 'TanimEkleModal')">


                                <td>
                                    @Html.DisplayFor(modelItem => item.DepartmanID)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DepartmanAdi)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FirmaAdi)
                                </td>
                                <td>
                                    <button class="btn btn-danger btn-rounded btn-sm" onclick="FormGoster('../Teknik/TanimSil/?TanimID=@item.DepartmanID','TanimSilModal')"
                                            data-toggle="tooltip" data-placement="bottom" title="Sil">
                                        <span class="fa fa-trash"></span>
                                    </button>
                                </td>
                            </tr>


                        }



                    </tbody>


                </table>

            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
    <!-- /.col -->
}

<div id="TanimEkleModal" class="modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Kategori Ekle/Düzenle</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick="FormKapat('TanimEkleModal')">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>


            <div id="TanimEkleModalBody" class="modal-body">

            </div>

        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>


<div id="TanimSilModal" class="modal">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Kategoriyi Ve Tanımı Sil</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Kapat" onclick="FormKapat('TanimSilModal')">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>


            <div id="TanimkSilModalBody" class="modal-body">

            </div>

        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>




