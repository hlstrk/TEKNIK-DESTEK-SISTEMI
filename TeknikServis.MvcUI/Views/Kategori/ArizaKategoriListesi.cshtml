

@model List<TeknikServis.Entittes.Models.ArizaTurleri>

@{
    ViewBag.Title = "ArizaKategoriListesi";
    Layout = null;

}

<!-- /.row -->



<div style=" margin:auto; padding-top:30px">

    <h1>

        <small>Arıza Kategorisi</small>
    </h1>
    <div class="card">

        <!-- /.card-header -->
        <div class="card-body">
            &nbsp;
            &nbsp;
            <a style="margin-bottom:20px;" onclick="FormGoster('../Kategori/ArizaTuruEkleKarti/?ArizaTuruID=0','TanimEkleModal')" class="btn btn-m btn-success btn-m pull-right">Ekle</a>
            &nbsp;
            <br />



            <table id="example44" class="table table-bordered table-striped">
                <thead>
                    <tr style="text-align: center">
                        <th style="text-align: center">
                            Barkod No
                        </th>
                        <th style="text-align: center">
                            Grubu
                        </th>

                        <th style="text-align: center">
                            Tanım Adı
                        </th>
                        <th style="text-align: center">
                            Sil
                        </th>







                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model.OrderByDescending(file => file.ArizaTuruID).ToList())

                    {


                    <tr style="text-align: center;cursor:pointer" ondblclick="FormGoster('../Kategori/ArizaTuruEkleKarti/?ArizaTuruID=@item.ArizaTuruID', 'TanimEkleModal')">


                            <td>
                                @Html.DisplayFor(modelItem => item.ArizaTuruID)
                            </td>
                            <td>
                                @Html.Label("Arıza Türü")
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ArizaTuru)
                            </td>
                            <td>
                                <button class="btn btn-danger btn-rounded btn-sm" onclick="FormGoster('../Kategori/ArizaTuruSil/?ArizaTuruID=@item.ArizaTuruID','TanimSilModal')"
                                        data-toggle="tooltip" data-placement="bottom" title="Sil">
                                    <span class="fa fa-trash"></span>
                                </button>
                            </td>
                        </tr>


                    }



                </tbody>


            </table>

        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
</div>
<!-- /.col -->


<div id="TanimEkleModal" class="modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Kategori Ekle/Düzenle</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick="FormKapat('TanimEkleModal')">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>


            <div id="TanimEkleModalBody" class="modal-body">

            </div>

        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>


<div id="TanimSilModal" class="modal">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Kategoriyi Ve Tanımı Sil</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Kapat" onclick="FormKapat('TanimSilModal')">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>


            <div id="TanimkSilModalBody" class="modal-body">

            </div>

        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
@if (Model.Count == 0)
{

    if (Session["Role"].ToString() == "Personel")
    {
        <br />
        <div class="callout callout-info lead">
            <h4>Uyarı!</h4>
            <p>Şu anda size atanan hiçbir teknik servis/arıza kaydı bulunmamaktadır.</p>
        </div>

    }
    else
    {
        <br />
        <div class="callout callout-info lead">
            <h4>Uyarı!</h4>
            <p>Henüz hiçbir destek talebi oluşturmadınız.</p>
        </div>

    }







}



