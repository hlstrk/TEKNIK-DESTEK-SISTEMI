<div class="box box-danger">
    @using (Html.BeginForm("BildirimKarti", "Bildirim", FormMethod.Post, new { id = "FrmBildirimKarti" }))
    {
        @Html.HiddenFor(x => x.bildirimID)

    <div class="row">
        <div class="col-md-6" style="margin-top: 1px;">

            <div class="form-group">
                <label>Eklenecek Öğe</label>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">

                        <span class="input-group-text"><i class="fa fa-object-group"></i></span>

                    </div>

                    @Html.TextBoxFor(x => x.bildirimIcerigi, new { @class = "form-control" })

                 

                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                <label>Ekleyen Kullanıcı</label>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">

                        <span class="input-group-text"><i class="fa fa-list-alt"></i></span>

                    </div>
                    @Html.DropDownListFor(model => model.olusturanKullanici, new SelectList(ViewBag.EKullaniciBAG, "AdSoyad", "AdSoyad"), new { @class = "form-control", id = "dropDown" })

                    <script>
                        $(function () {
                            $('#dropDown').select2({


                                placeholder: "Seçim Yapın..",


                                width: '160px'
                            });
                        });
                    </script>



                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                <label>Kaç Kişiye Gönderilecek?</label>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">

                        <span class="input-group-text"><i class="fa fa-question"></i></span>

                    </div>
                    @Html.DropDownListFor(m => m.sayac, Enumerable.Range(1, 10).Select(i => new SelectListItem { Text = i.ToString(), Value = i.ToString() }), new
                    {
                       
                        @class = "form-control"
                       

                    })



                </div>
            </div>
        </div>

        <br />



    </div>

        <div class="modal-footer">
            <div class="col-md-12">
                @*<button type="submit" onclick="return MusteriKaydet()" class="btn btn-block btn-primary">Kaydet</button>*@
                <button type="button" onclick="BildirimKaydet()" class="btn btn-block btn-primary">Kaydet</button>
            </div>
        </div>
    }
</div>

