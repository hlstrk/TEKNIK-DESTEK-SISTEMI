@model List<TeknikServis.Entittes.Models.FirmaView>

@{
    Layout = null;
    ViewBag.Title = "FirmaListesi";
}

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">


                <div class="card">

                    <!-- /.card-header -->
                    <div class="card-body">
                        @if (Model.Count == 0)
                        {

                            if (Session["Role"].ToString() == "Personel")
                            {
                                <br />
                                <div class="callout callout-info lead">
                                    <h4>Uyarı!</h4>
                                    <p>Go Back To Safety.</p>
                                </div>

                            }
                            else
                            {
                                <br />
                                <div class="callout callout-info lead">
                                    <h4>Henüz hiçbir firma eklemediniz.</h4>

                                </div>

                            }





                            <hr />

                        }

                        else if (Model.Count != 0)
                        {









                            <table id="example2" class="table table-bordered table-striped">

                                <thead>
                                    <tr>
                                        <th>
                                            Firma No
                                        </th>
                                        <th>
                                            Müşteri Türü
                                        </th>
                                        <th>
                                            Firma
                                        </th>
                                        <th>
                                            Yetkili Ad Soyad
                                        </th>
                                        <th>
                                            Cep Telefonu
                                        </th>
                                        <th>
                                            Email
                                        </th>
                                        <th>
                                            Aktif İşlemler
                                        </th>

                                        <th style="text-align:center">
                                            Firma Türü
                                        </th>
                                        <th style="text-align:center">
                                            Durumu
                                        </th>

                                        <th style="text-align:center">
                                            İşlemler
                                        </th>


                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {

                                        <tr ondblclick="FormGoster('../Firma/FirmaKarti/?FirmaID=@item.FirmaID','FirmaModal')">
                                            <td>
                                                <a href="#" onclick="FormGoster('../Firma/FirmaKarti/?FirmaID=@item.FirmaID','FirmaModal')"> @Html.DisplayFor(modelItem => item.BarkodNo)</a>

                                            </td>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.MusteriTuru)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.FirmaAdi)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.AdSoyad)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.CepTelefonu)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Email)
                                            </td>
                                            <td style="text-align:center">


                                                <button style="margin:auto" type="button" onclick="FormGoster('../Firma/DestekListesi/?FirmaID=@item.FirmaID', 'FirmaDestekler')" class="btn btn-outline-dark"><i class="fas fa-eye"></i></button>

                                            </td>



                                            <td style="text-align: center">
                                                @if (item.TedarikciFirmaMi != true)
                                                {


                                                    <span class="badge badge-primary">Destek</span>

                                                }
                                                else
                                                {
                                                    <span class="badge badge-secondary">Ticari</span>
                                                }

                                            </td>
                                            <td style="text-align: center">

                                                @if (item.Aktif == true)
                                                {
                                                    <div style="text-align: center">
                                                        <label style="color: green">Aktif</label>
                                                    </div>
                                                }
                                                else
                                                {
                                                    <div style="text-align:center">
                                                        <label style="color:grey">Pasif</label>
                                                    </div>
                                                }

                                            </td>

                                            <td style="text-align:center">
                                                <button class="btn btn-danger btn-rounded btn-sm" onclick="FormGoster('../Firma/FirmaSil/?FirmaID=@item.FirmaID', 'FirmaSilModal')"
                                                        data-toggle="tooltip" data-placement="bottom" title="Sil">
                                                    <span class="fa fa-trash"></span>
                                                </button>
                                            </td>

                                        </tr>

                                    }
                                </tbody>


                            </table>
                        }
                        <br />
                        <a onclick="FormGoster('../Firma/FirmaKarti', 'FirmaModal')" class="btn btn-m btn-primary btn-m pull-right">Yeni Firma Ekle</a>

                        <br />
                        <br />

                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>

    <!-- /.container-fluid -->
</section>






