

@model List<TeknikServis.Entittes.Models.EnvanterView>

@{
    ViewBag.Title = "EnvanterListesi";
    Layout = null;

}


<!-- /.row -->









<div class="card">

    <!-- /.card-header -->
    <div class="card-body" style="padding:0px">
        &nbsp;
        &nbsp;

        &nbsp;
        <br />



        @if (Model.Count == 0)
        {

            if (Session["Role"].ToString() == "Personel")
            {
                <br />
                <div class="callout callout-info lead">
                    <h4>Uyarı!</h4>
                    <p>Şu anda size atanan hiçbir teknik servis/arıza kaydı bulunmamaktadır.</p>
                </div>

            }
            else
            {
                <br />
                <div class="callout callout-warning lead">
                    <h4>Uyarı!</h4>
                    <p>Henüz hiçbir envanter kaydı yok.</p>
                </div>

            }







        }

        else
        {
            <table id="example1" class="table table-bordered table-striped">
                <thead>
                    <tr style="text-align: center">
                        <th style="text-align: center">
                            Envanter No
                        </th>
                        <th style="text-align: center">
                            Ekleyen
                        </th>


                        <th style="text-align: center">
                            Kategori
                        </th>

                        <th style="text-align: center">
                            Marka
                        </th>


                        <th style="text-align: center">
                            AnyDeskID
                        </th>





                        <th style="text-align: center">
                            İşletim Sistemi
                        </th>

                        <th style="text-align: center">
                            Antivirüs
                        </th>


                        <th style="text-align: center">

                        </th>







                    </tr>
                </thead>
                <tbody style="padding:0px">

                    @foreach (var item in Model.OrderByDescending(file => file.EnvanterID).ToList())

                    {


                        <tr style="text-align: center" ondblclick="FormGoster('../Envanter/EnvanterKarti/?EnvanterID=@item.EnvanterID','EnvanterModal')">


                            <td style="padding:0px">
                                @Html.DisplayFor(modelItem => item.EnvanterID)
                            </td>
                            @{
                                var gosterilecek2 = item.OlusturanKullaniciAdi.Remove(6);
                            }
                            <td style="padding:0px">
                                @Html.DisplayFor(modelItem => gosterilecek2)
                            </td>


                            <td style="padding:0px">
                                @Html.DisplayFor(modelItem => item.EnvanterTuru)
                            </td>

                            <td style="padding:0px">
                                @Html.DisplayFor(modelItem => item.MarkaAdi)
                            </td>


                            <td style="padding:0px">
                                @Html.DisplayFor(modelItem => item.AnyDesk)
                            </td>


                            <td style="padding:0px">
                                @Html.DisplayFor(modelItem => item.OS)
                            </td>


                            <td style="padding:0px">
                                @Html.DisplayFor(modelItem => item.AntiVirüs)
                            </td>






                            <td style="padding:0px">
                                <a class="btn btn-danger btn-rounded btn-sm" onclick="FormGoster('../Kullanici/EnvanterSilKart/?EnvanterID=@item.EnvanterID','EnvanterSilModal')"
                                   data-toggle="tooltip" data-placement="bottom" title="Sil">
                                    <span class="fa fa-trash"></span>
                                </a>
                            </td>
                        </tr>


                    }



                </tbody>


            </table>
        }
    </div>
    <!-- /.card-body -->
</div>
<!-- /.card -->



<div id="EnvanterEkleModal" class="modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Envanter Ekle/Düzenle</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick="FormKapat('EnvanterEkleModal')">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>


            <div id="EnvanterEkleModalBody" class="modal-body">

            </div>

        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>


<div id="EnvanterSilModal" class="modal">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Envanter Kaydını Sil</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Kapat" onclick="FormKapat('EnvanterSilModal')">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>


            <div id="EnvanterkSilModalBody" class="modal-body">

            </div>

        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>




