<div class="modal-header">
    <h5 class="modal-title" style="color:lightslategrey">@Session["EnvanterAktarimFirmaAdi"]</h5>  <h5 class="modal-title">  &nbsp;  Envanter</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick="FormKapat('EnvanterModal')">
        <span aria-hidden="true">&times;</span>
    </button>
</div>





<div class="box box-danger" style="padding:1rem">
    @using (Html.BeginForm("EnvanterKarti", "Kullanici", FormMethod.Post, new { id = "FrmEnvanterKartiFirma" }))
    {
        @Html.HiddenFor(x => x.EnvanterID)
        @Html.HiddenFor(x => x.KullaniciID)

        @Html.HiddenFor(x => x.FirmaID)
        <div class="row">






            @if (Session["Role"].ToString() == "Admin" || Session["Role"].ToString() == "Personel")
            {

                <div class="col-md-12" style="margin-top: 1px;">

                    <div class="form-group">

                        <div id="PanelEnvanterListeKart" class="col-12">
                            @{
                                Html.RenderAction("EnvanterListesiKart");
                            }
                        </div>
                    </div>
                </div>
            }









        </div>











    }
</div>

<script>




    function EnvanterSilK(id) {

        $.ajax({
            method: 'GET',
            url: '../Firma/EnvanterSil/' + id,
            content: "application/html;",
            dataType: 'html'

        });



    }
</script>

<div id="EnvanterSilModal" class="modal">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Envanter Kaydını Sil</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Kapat" onclick="FormKapat('EnvanterSilModal')">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>


            <div id="EnvanterSilModalBody" class="modal-body">

            </div>

        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>

